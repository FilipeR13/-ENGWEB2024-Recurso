extends layout

block content
  .w3-card-4
      header.w3-container.w3-teal
          h1= title
      .w3-container
                  table.w3-table-all
                      tr
                          th Id
                          th Title
                          th Author
                          th Publish Date
                          th Pages 
                      each slist in lista
                          tr
                              td
                                  a(href='/' + slist._id) #{slist._id}
                              td= slist.title
                              td= slist.author
                              td= slist.publishDate
                              td= slist.pages
      footer.w3-container.w3-blue 
