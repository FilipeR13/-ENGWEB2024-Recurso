extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
        h1 Nome do autor: #{autor}
        h2 Identificador: #{autor}

    .w3-container
                table.w3-table-all
                    tr
                        th Id
                        th Title
                        th Author
                        th Publish Date
                        th Pages 
                    each slist in lista
                        tr
                            td
                                a(href='/' + slist._id) #{slist._id}
                            td= slist.title
                            td
                            if slist.author && Array.isArray(slist.author)
                                each author in slist.author
                                    a(href="/authors/" + author)= author
                                    | &nbsp;
                            else
                                | N/A
                            td= slist.publishDate
                            td= slist.pages
    footer.w3-container.w3-teal
        address Generated by A100692 in 06/06/2024 - 
            a(href='/') Voltar
